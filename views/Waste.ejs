                        <h2 id="modalTitle" class="text-lg font-bold">
                            Application Form
                        </h2>
                        <div onclick="closeForm()">
                            <svg class="fill-gray-200 hover:fill-red-600 cursor-pointer transition-colors" width="32px"
                                xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24"
                                fill="currentColor">
                                <path
                                    d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20ZM12 10.5858L14.8284 7.75736L16.2426 9.17157L13.4142 12L16.2426 14.8284L14.8284 16.2426L12 13.4142L9.17157 16.2426L7.75736 14.8284L10.5858 12L7.75736 9.17157L9.17157 7.75736L12 10.5858Z">
                                </path>
                            </svg>
                        </div>
                    </div>

                    <form method="post" action="/dash/waste/formsubmit">
                        <div class="p-6 space-y-4">
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Farmer Name *
                                    </label>
                                    <input type="text" id="farmerName" required
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        placeholder="Enter your full name" name="fName" />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Location *
                                    </label>
                                    <input type="text" id="location" required
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        placeholder="City, State" name="location" />
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Crop Type *
                                    </label>
                                    <select id="cropType" required
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        name="cropType">
                                        <option value="">Select crop type</option>
                                        <option value="wheat">Wheat</option>
                                        <option value="rice">Rice</option>
                                        <option value="corn">Corn</option>
                                        <option value="sugarcane">Sugarcane</option>
                                        <option value="cotton">Cotton</option>
                                        <option value="vegetables">Vegetables</option>
                                        <option value="fruits">Fruits</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Estimated Waste Amount (tons) *
                                    </label>
                                    <input type="number" id="wasteAmount" required min="0" step="0.1"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        placeholder="0.0" name="amount" />
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Current Disposal Method
                                </label>
                                <input type="text" id="currentDisposal"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="e.g., Burning, Landfill, etc." name="duration" />
                            </div>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Contact Number *
                                    </label>
                                    <input type="tel" id="contactNumber" required
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        placeholder="+91 9876543210" name="contact" />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Email Address
                                    </label>
                                    <input type="email" id="email"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                        placeholder="farmer@example.com" name="email" />
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Additional Notes
                                </label>

                                <input type="textarea" id="additionalNotes" rows="3"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="Any additional information or special requirements..."
                                    name="addDetails" />
                            </div>

                            <div class="flex flex-col-reverse gap-4 pt-4">
                                <button onclick="closeForm()"
                                    class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                                    Cancel
                                </button>
                                <button id="submitBtn" onclick="submitForm()"
                                    class="flex-1 px-6 py-3 text-white rounded-lg hover:shadow-lg transition-all">
                                    Submit Application
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>

</body>
<script>
    function openForm(option) {
        document.getElementById('suggestion-form-modal').classList.remove('hidden');
        document.getElementById('suggestion-form-modal').classList.add('flex');
        document.getElementById('selected-option').value = option;
    }

    function closeForm() {
        document.getElementById('suggestion-form-modal').classList.add('hidden');
        document.getElementById('suggestion-form-modal').classList.remove('flex');
    }

    function submitForm(event) {
        event.preventDefault();
        const form = event.target;
        const data = {
            suggestionType: form.suggestionType.value,
            name: form.name.value,
            crop: form.crop.value,
            location: form.location.value,
            contact: form.contact.value
        };
        console.log("Submitted Data:", data);
        alert("Details submitted successfully!"); // Replace with your backend POST logic
        form.reset();
        closeForm();
    }
</script>
