<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard Layout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="../stylesheets/responsive.css">
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body class="bg-gray-200 min-h-screen flex flex-col">

    <section class="banner flex flex-col items-center justify-center mx-5 mt-6">
        <div id="banner-container"
            class="banner_component w-full max-w-7xl h:48 sm:h-60 md:h-64 lg:h-96 overflow-hidden flex items-center justify-center text-3xl font-semibold text-gray-700 select-none">
            <button aria-label="Previous Banner" id="prevSlide"
                class="bg-white md:block hidden z-10 p-2 h-24 md:h-48 shadow hover:bg-gray-100 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <div
                class="bg-gray-300 rounded shadow-lg overflow-hidden z-40 w-full max-w-7xl h-48 sm:h-60 md:h-64 lg:h-96 flex items-center justify-center text-3xl font-semibold text-gray-700 select-none">
                <img id="banner-img" class="w-full h-full object-cover" src="../images/banner/banner.jpg"
                    alt="banner_img">
                <!-- <div class="text-3xl font-semibold text-gray-700 select-none">
                        
                    </div> -->
            </div>
            <button aria-label="Next Banner" id="nextSlide"
                class="bg-white md:block hidden p-2 h-24 md:h-48 z-10 shadow hover:bg-gray-100 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>

        <div class="flex space-x-2 justify-center p-5">
            <span id="dot-0" class="active w-9 h-3 rounded-full bg-gray-700 transition-all"></span>
            <span id="dot-1" class=" w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
            <span id="dot-2" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
            <span id="dot-3" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
            <span id="dot-4" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
        </div>
    </section>
    <!-- NOW COPY & PASTE  -->


    <main class="flex flex-col lg:flex-row max-w-7xl mx-auto mt-8 px-4 md:px-0 gap-6 flex-grow">

        <!-- Left Column -->
        <section class="flex flex-col space-y-6 flex-1 min-w-0">

            <!-- Select from here -->
            <!-- Smart Irrigation -->
            <div class="bg-white rounded-xl border border-gray-300 p-6 flex-1 min-w-[300px]">
                <h3 class="text-xl font-semibold mb-4">Smart Irrigation</h3>
                <div class="main-box flex flex-col md:flex-row justify-around  gap-4 pt-4 items-center">
                    <div class="flex items-center justify-center mb-4">
                        <div class="relative w-48 h-48 md:w-64 md:h-64">
                            <svg class="w-48 h-48 md:w-64 md:h-64" viewBox="0 0 36 36">
                                <path class="text-gray-300" stroke-width="4" fill="none" stroke="currentColor"
                                    d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                                <path id="moisture-fill" class="text-blue-600" stroke-width="4" fill="none"
                                    stroke="currentColor" stroke-dasharray="20, 100"
                                    d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                            </svg>
                            <div
                                class="absolute inset-0 flex items-center justify-center md:text-3xl	 text-xl font-bold">
                                <span id="moisture-percentage">20%</span>
                            </div>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <button class="w-full bg-indigo-600 text-white py-2 rounded-lg" id="setup-waterpump"> Setup
                            Irrigation </button>
                        <button id="start-irrigation"
                            class="w-full border border-indigo-600 text-indigo-600 py-2 bg-indigo-50 rounded-lg"> Start
                            Irrigation </button>
                        <button id="stop-irrigation"
                            class="w-full border border-red-600 text-red-600 py-2 bg-red-50 rounded-lg">Emergency
                            Stop</button>
                    </div>
                </div>

            </div>
            <!-- NOW COPY & PASTE -->



        </section>

        <!-- Right Column -->
        <aside class="flex flex-col space-y-6 w-full md:w-96 min-w-[280px]">

            <!-- Illustration and Weather Update -->
            <div
                class="flex flex-col justify-center items-center  w-full max-w-6xl mx-auto gap-4 rounded-xl bg-white p-6 shadow-lg">

                <h1 class="text-3xl font-extrabold text-black font-sans mb-2">🌤️ Weather Details</h1>

                <div
                    class="w-full flex items-center justify-between px-4 py-3 bg-zinc-100 rounded-md text-gray-600 text-sm shadow-inner">
                    <span class="font-semibold">Last Update:</span>
                    <p id="w-date" class="text-red-600 font-medium">Date: </p>
                </div>

                <p id="w-temp"
                    class="w-full px-4 py-3 bg-gradient-to-r from-blue-100 to-blue-200 rounded-md text-center text-blue-800 text-base font-semibold shadow">
                    🌡️ Today’s temperature is:
                </p>

                <p id="w-humidity"
                    class="w-full px-4 py-3 bg-gradient-to-r from-emerald-100 to-emerald-200 rounded-md text-center text-emerald-800 text-base font-semibold shadow">
                    💧 Humidity:
                </p>

                <p id="w-des"
                    class="w-full px-4 py-3 bg-gradient-to-r from-purple-100 to-purple-200 rounded-md text-center text-purple-800 text-base font-semibold shadow">
                    📝 Description:
                </p>

                <p id="w-windSpeed"
                    class="w-full px-4 py-3 bg-gradient-to-r from-yellow-100 to-yellow-200 rounded-md text-center text-yellow-800 text-base font-semibold shadow">
                    🍃 Wind Speed:
                </p>

                <p id="w-visibility"
                    class="w-full px-4 py-3 bg-gradient-to-r from-gray-100 to-gray-200 rounded-md text-center text-gray-700 text-base font-semibold shadow">
                    👀 Visibility:
                </p>

                <p id="w-windDirection"
                    class="w-full px-4 py-3 bg-gradient-to-r from-indigo-100 to-indigo-200 rounded-md text-center text-indigo-800 text-base font-semibold shadow">
                    🧭 Wind Direction:
                </p>

                <p id="w-pressure"
                    class="w-full px-4 py-3 bg-gradient-to-r from-pink-100 to-pink-200 rounded-md text-center text-pink-800 text-base font-semibold shadow">
                    ⚖️ Pressure:
                </p>

            </div>







        </aside>

    </main>
    <div class="bg-white p-6 rounded-xl shadow-lg select-none w-full max-w-6xl mx-auto mt-6">
        <h3 class="text-2xl font-bold text-red-600 mb-4 flex items-center gap-2">
            ⚠️ Weather-Based Crop Suggestions
        </h3>

        <div class="space-y-4">

            <!-- Suggestion Card 1 -->
            <div
                class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-md shadow hover:shadow-md transition duration-300">
                <div class="flex items-center justify-between">
                    <p class="text-yellow-800 font-semibold text-base">🌧️ Rain expected in 2 days</p>
                    <span class="text-xs text-gray-500">Updated: Today</span>
                </div>
                <p class="mt-2 text-sm text-gray-700">Harvest mature crops like wheat or mustard now to avoid water
                    damage.</p>
            </div>

            <!-- Suggestion Card 2 -->
            <div
                class="bg-green-50 border-l-4 border-green-400 p-4 rounded-md shadow hover:shadow-md transition duration-300">
                <div class="flex items-center justify-between">
                    <p class="text-green-800 font-semibold text-base">🌾 Good conditions for paddy transplantation</p>
                    <span class="text-xs text-gray-500">Next 3–5 days</span>
                </div>
                <p class="mt-2 text-sm text-gray-700">The moisture in soil and upcoming showers are ideal for planting
                    paddy or maize.</p>
            </div>

            <!-- Suggestion Card 3 -->
            <div
                class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md shadow hover:shadow-md transition duration-300">
                <div class="flex items-center justify-between">
                    <p class="text-red-700 font-semibold text-base">🌀 Storm Alert: High wind speeds expected</p>
                    <span class="text-xs text-gray-500">Valid for: 24 hours</span>
                </div>
                <p class="mt-2 text-sm text-gray-700">Avoid pesticide spraying. Secure greenhouse materials and young
                    saplings.</p>
            </div>

        </div>
    </div>
    <!-- Waste Reuse Suggestions -->
    <!-- 🌱 Waste Reuse Suggestions UI -->
    <div class="bg-white p-6 rounded-xl shadow-lg flex flex-col select-none w-[80vw] mx-auto mt-6">
        <h2 class="text-2xl font-bold text-green-700 mb-6 flex items-center gap-2">♻️ Waste Crop Reuse Options</h2>

        <div class="flex flex-col gap-4 w-full ">

            <!-- Suggestion Card 1 -->
            <div
                class=" w-full border-gray-300 rounded-lg px-6 py-4 bg-green-50 text-gray-800 text-base flex justify-between gap-5 items-center">
                <p>🛒 Sell crop residue to local wholesaler for animal feed or compost manufacturing.</p>
                <button onclick="openForm('Sell to Wholesaler')"
                    class="p-2 px-4 bg-green-600 text-white rounded-md hover:bg-green-700 transition">Use This</button>
            </div>

            <!-- Suggestion Card 2 -->
            <div
                class="border border-gray-300 rounded-lg px-6 py-4 bg-blue-50 text-gray-800 text-base flex justify-between gap-5  items-center">
                <p>🏠 Convert waste crops into compost at your farm using bio-decomposers.</p>
                <button onclick="openForm('Compost at Farm')"
                    class="p-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">Use This</button>
            </div>

            <!-- Suggestion Card 3 -->
            <div
                class="border border-gray-300 rounded-lg px-6 py-4 bg-yellow-50 text-gray-800 text-base flex justify-between items-center">
                <p>📦 Sell to our reuse center — we collect and resell or repurpose crop waste.</p>
                <button onclick="openForm('Sell to Us')"
                    class="p-2 px-4 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition">Use
                    This</button>
            </div>

        </div>
    </div>

    <!-- 📄 Modal Form -->
    <div id="suggestion-form-modal"
        class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-md p-6 relative">

            <!-- Close Button -->
            <button onclick="closeForm()"
                class="absolute top-2 right-2 text-gray-500 hover:text-red-500 text-lg">&times;</button>

            <h3 class="text-xl font-bold mb-4 text-green-700">🌾 Submit Your Details</h3>

            <form onsubmit="submitForm(event)">
                <input type="hidden" id="selected-option" name="suggestionType">

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-600 mb-1">Your Name</label>
                    <input required name="name"
                        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400"
                        placeholder="Enter your name">
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-600 mb-1">Crop Type</label>
                    <input required name="crop"
                        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400"
                        placeholder="e.g., Wheat, Rice">
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-600 mb-1">Location</label>
                    <input required name="location"
                        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400"
                        placeholder="Enter your village or town">
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-600 mb-1">Contact Number</label>
                    <input required name="contact"
                        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400"
                        placeholder="Phone number">
                </div>

                <button type="submit"
                    class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full mt-2">Submit</button>
            </form>
        </div>
    </div>

    <!-- 🌐 Script -->
    <script>
        function openForm(option) {
            document.getElementById('suggestion-form-modal').classList.remove('hidden');
            document.getElementById('suggestion-form-modal').classList.add('flex');
            document.getElementById('selected-option').value = option;
        }

        function closeForm() {
            document.getElementById('suggestion-form-modal').classList.add('hidden');
            document.getElementById('suggestion-form-modal').classList.remove('flex');
        }

        function submitForm(event) {
            event.preventDefault();
            const form = event.target;
            const data = {
                suggestionType: form.suggestionType.value,
                name: form.name.value,
                crop: form.crop.value,
                location: form.location.value,
                contact: form.contact.value
            };
            console.log("Submitted Data:", data);
            alert("Details submitted successfully!"); // Replace with your backend POST logic
            form.reset();
            closeForm();
        }
    </script>




</body>
<script src="../javascripts/script.js"></script>

</html>