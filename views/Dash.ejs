    <script>
        // Chart.js line chart for Moisture Over Time
        // const ctx = document.getElementById('moistureChart').getContext('2d');
        const moistureChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                datasets: [{
                    label: 'Moisture %',
                    data: [20, 22, 21, 23, 20, 24, 26],
                    borderColor: 'rgba(92, 158, 85, 0.8)',
                    backgroundColor: 'rgba(92, 158, 85, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 3,
                    pointHoverRadius: 6,
                    borderWidth: 3,
                    hoverBorderWidth: 4,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'nearest',
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#5C9E55',
                        titleColor: 'white',
                        bodyColor: 'white',
                        cornerRadius: 6,
                        padding: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        max: 30,
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });


        // Voice search interaction (stub)
        const voiceBtn = document.getElementById('voiceBtn');
        voiceBtn.addEventListener('click', () => {
            alert('Voice search activated (Demo mode, not implemented).');
        });

        // Quick Actions interaction
        const startIrrigationBtn = document.getElementById('startIrrigationBtn');
        startIrrigationBtn.addEventListener('click', () => {
            startIrrigationBtn.disabled = true;
            startIrrigationBtn.innerText = 'Starting...';
            setTimeout(() => {
                alert('Irrigation cycle started.');
                startIrrigationBtn.innerText = 'Start Irrigation Cycle';
                startIrrigationBtn.disabled = false;
            }, 1500);
        });

        const scheduleReportBtn = document.getElementById('scheduleReportBtn');
        scheduleReportBtn.addEventListener('click', () => {
            scheduleReportBtn.disabled = true;
            scheduleReportBtn.innerText = 'Scheduling...';
            setTimeout(() => {
                alert('Report export scheduled.');
                scheduleReportBtn.innerText = 'Schedule Report Export';
                scheduleReportBtn.disabled = false;
            }, 1500);
        });

        // Simple search input filtering of Alerts (only description)
        const searchInput = document.getElementById('searchInput');
        const alertsTableRows = document.querySelectorAll('tbody tr');

        searchInput.addEventListener('input', (e) => {
            const filter = e.target.value.toLowerCase();
            alertsTableRows.forEach(row => {
                const descriptionCell = row.children[1].textContent.toLowerCase();
                if (descriptionCell.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
